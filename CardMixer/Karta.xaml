<UserControl x:Class="CardMixer.Karta"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CardMixer"
             mc:Ignorable="d" 
             d:DesignHeight="108" d:DesignWidth="83">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="88"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="63"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="image" Stretch="Fill" x:FieldModifier="public"/>
        <Button x:Name="reset" Content="R" Grid.Column="1" Height="20" x:FieldModifier="public" Margin="5,34,0,34"/>
        <Label x:Name="pocetO" Content="00" Grid.Column="1" Margin="0,0,0,0" Height="34" VerticalAlignment="Bottom" VerticalContentAlignment="Center" Padding="5,5,0,5"/>
        <Label x:Name="pocetK" Content="00" Grid.Column="1" Margin="0,0,0,0" Height="34" VerticalAlignment="Top" VerticalContentAlignment="Center" Padding="5,5,0,5"/>
        <Viewbox Grid.Row="1">
            <Label x:Name="jmeno" Content="Label" VerticalContentAlignment="Top"/>
        </Viewbox>
    </Grid>
</UserControl>
