<Window x:Class="CardMixer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CardMixer"
        mc:Ignorable="d"
        Title="CardMixer" Height="450" Width="800" WindowState="Maximized" WindowStyle="SingleBorderWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"/>
            <!--<RowDefinition Height="15"/>-->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Viewbox>
            <StackPanel x:Name="sp"/>
        </Viewbox>
        <Viewbox Grid.Column="1">
            <Image x:Name="image" Height="88" Width="63" Stretch="Fill"/>
        </Viewbox>
    </Grid>
</Window>
